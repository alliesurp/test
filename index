<script>

  today = new Date();

today.setFullYear(1985);

christmas = new Date();

christmas.setFullYear(1985, 11, 25);



if (+today === +christmas) {

    response = "Yes.";

} else {

    response = "No.";

}



document.getElementById("answer").innerHTML = response;



</script>
